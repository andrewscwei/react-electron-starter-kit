{
  "version": "1.3.0",
  "name": "react-electron-starter-kit",
  "description": "Experimental React Electron app starter kit",
  "main": "./build/main.js",
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "repository": "https://github.com/andrewscwei/react-electron-starter-kit",
  "license": "MIT",
  "config": {
    "forge": "./config/forge.conf.js"
  },
  "scripts": {
    "start": "electron build/main.js",
    "clean": "npm run clean:build && npm run clean:make",
    "clean:build": "rimraf build",
    "clean:make": "rimraf out",
    "build": "cross-env-shell NODE_ENV=production \"npm run clean:build && npm run build:main && npm run build:renderer\"",
    "build:main": "webpack --config config/build.main.conf.ts",
    "build:renderer": "webpack --config config/build.renderer.conf.ts",
    "dev": "npm run clean:build && concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "cross-env NODE_ENV=development concurrently \"npm run build:main -- --watch\" \"wait-on build/main.js build/preload.js http://localhost:${PORT:-8080} && electron -r dotenv/config build/main.js\"",
    "dev:renderer": "cross-env NODE_ENV=development webpack-cli serve --mode development --config config/build.renderer.conf.ts",
    "make": "npm run build && npm run clean:make && electron-forge make",
    "publish": "npm run build && npm run clean:make && electron-forge publish",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:fix": "npm run lint:ts:fix && npm run lint:css:fix",
    "lint:ts": "eslint --ext .ts --ext .tsx config src",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:css": "stylelint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint:css:fix": "npm run lint:css -- --fix"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.4",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.1",
    "@stylelint/postcss-css-in-js": "^0.37.2",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/ip": "^1.1.0",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.7",
    "@types/node-polyglot": "^2.4.2",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@types/react-transition-group": "^4.4.4",
    "@types/require-dir": "^1.0.2",
    "@types/styled-components": "^5.1.15",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.3",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-styled-components": "^1.13.3",
    "concurrently": "^6.4.0",
    "copy-webpack-plugin": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "electron": "^16.0.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.2.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "html-webpack-plugin": "^5.5.0",
    "node-loader": "^2.0.0",
    "raw-loader": "^4.0.2",
    "react-is": "^17.0.2",
    "react-refresh": "^0.10.0",
    "require-dir": "^1.2.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "wait-on": "^6.0.0",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "electron-log": "^4.4.1",
    "ip": "^1.1.5",
    "lodash": "^4.17.21",
    "node-polyglot": "^2.4.2",
    "open": "^8.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router": "^6.0.2",
    "react-router-dom": "^6.0.2",
    "react-transition-group": "^4.4.2",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.0",
    "styled-normalize": "^8.0.7"
  }
}
