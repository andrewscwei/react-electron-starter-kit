{
  "version": "3.0.0",
  "name": "react-electron-starter-kit",
  "description": "Experimental React Electron app starter kit",
  "main": "./build/main.js",
  "author": "Andrew Wei <andrewscwei@gmail.com>",
  "repository": "https://github.com/andrewscwei/react-electron-starter-kit",
  "license": "MIT",
  "config": {
    "forge": "./config/forge.conf.js"
  },
  "scripts": {
    "start": "electron build/main.js",
    "clean": "npm run clean:build && npm run clean:make",
    "clean:build": "rimraf build",
    "clean:make": "rimraf out",
    "prebuild": "npm run lint",
    "build": "cross-env-shell NODE_ENV=production \"npm run clean:build && npm run build:main && npm run build:renderer\"",
    "build:main": "webpack --config config/build.main.conf.ts",
    "build:renderer": "webpack --config config/build.renderer.conf.ts",
    "test:ts": "jest -b --colors --passWithNoTests --testEnvironment=jsdom src/$npm_config_files",
    "dev": "npm run clean:build && concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "cross-env NODE_ENV=development concurrently \"npm run build:main -- --watch\" \"wait-on build/main.js build/preload.js http://localhost:${PORT:-8080} && electron -r dotenv/config build/main.js\"",
    "dev:renderer": "cross-env NODE_ENV=development webpack-cli serve --mode development --config config/build.renderer.conf.ts",
    "make": "npm run build && npm run clean:make && electron-forge make",
    "publish": "npm run build && npm run clean:make && electron-forge publish",
    "lint": "eslint --ext .ts --ext .tsx config src",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/publisher-github": "^6.0.0-beta.63",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/ip": "^1.1.0",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.19",
    "@types/node-polyglot": "^2.4.2",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/require-dir": "^1.0.2",
    "@types/styled-components": "^5.1.23",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.3",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-styled-components": "^2.0.5",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "electron": "^17.0.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.9.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "node-loader": "^2.0.0",
    "raw-loader": "^4.0.2",
    "react-is": "^17.0.2",
    "react-refresh": "^0.11.0",
    "require-dir": "^1.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "wait-on": "^6.0.1",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "electron-log": "^4.4.6",
    "ip": "^1.1.5",
    "lodash": "^4.17.21",
    "node-polyglot": "^2.4.2",
    "open": "^8.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "styled-normalize": "^8.0.7"
  }
}
